{
  "name": "rn-devtools-mcp",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --platform node --target node20 --out-dir dist --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx src/index.ts",
    "smoke": "tsx scripts/smoke.ts",
    "docs:tools": "tsx scripts/generate-tools-docs.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/ws": "^8.18.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "rn-devtools-mcp": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "publishConfig": {
    "access": "public"
  }
}
